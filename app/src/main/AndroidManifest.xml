<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
>
	<uses-permission
		android:name="android.permission.READ_EXTERNAL_STORAGE"
		/>
	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"
		/>
	<uses-permission
		android:name="android.permission.FOREGROUND_SERVICE"
		/>

	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:description="@string/app_title"
		android:requestLegacyExternalStorage="true"
	>

		<activity
			android:name=".ActivityMain"
			android:label="@string/app_name"
			android:configChanges="orientation|keyboardHidden"
			android:alwaysRetainTaskState="false"
			android:launchMode="singleTask"
			android:multiprocess="true"
			android:persistent="false"
			android:theme="@android:style/Theme"
			android:exported="true"
			>

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="audio/x-mxdrv" />
			</intent-filter>

		</activity>

		<activity
			android:name=".ActivitySetting"
			android:label="@string/app_name"
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme"
			android:exported="false"
			/>

		<activity
			android:name=".ActivitySelectMdxFile"
			android:label="@string/app_name"
			android:theme="@android:style/Theme"
			android:exported="false"
			/>

		<service
			android:name="MusicPlayerService"
			android:process=".MusicPlayerService"
			android:exported="false"
			>
			<intent-filter>
				<action android:name="net.gorry.gamdx.IMusicPlayerService" />
			</intent-filter>
		</service>

		<receiver
			android:name="MyAlarmManager"
			android:process=".MusicPlayerService"
			android:exported="false"
			/>

	</application>

</manifest>
